<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Scan QR WhatsApp</title>
  <link rel="stylesheet" href="/style.css" />
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <div class="container">
    <h1>Hubungkan WhatsApp</h1>
    <div id="status">Menunggu QR...</div>
    <div id="loader" class="loader"></div>
    <div id="qr"></div>
  </div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  socket.emit("start-bot");

  socket.on("qr", (data) => {
    document.getElementById("qrcode").src = data;
  });

  socket.on("ready", () => {
    document.getElementById("status").innerText = "âœ… WhatsApp Siap!";
  });

  socket.on("redirect", (url) => {
    window.location.href = url;
  });

  socket.on("error", (msg) => {
    alert(msg);
  });
</script>

</body>
</html>

